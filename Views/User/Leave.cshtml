@model LeaveManagementSystem.ViewModel.LeaveViewModel;

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <form asp-action="MakeLeave" method="post">
        <input type="email" asp-for="Email" class="mt-3 form-control" placeholder="User Email" />
        <input type="text" asp-for="Reason" class="mt-3 form-control" placeholder="Reason for Leave" />
        <input type="text" asp-for="Duration" class="mt-3 form-control" placeholder="Duration of leave in days" />
        <button class="mt-3 btn btn-outline-primary">Submit</button>
    </form>
</body>
</html>
