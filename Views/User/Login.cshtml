@{
    Layout = null;
}
@model LeaveManagementSystem.ViewModel.LoginViewModel;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LeaveManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LeaveManagementSystem.styles.css" asp-append-version="true" />
</head>
<body class="row justify-content-center">
    <h1 class="text-center mt-5 font-weight-light text-primary">Login</h1>
    <form asp-action="ValidateUser" method="post">
        <div class=" row justify-content-center">
            <input type="email" asp-for="Email" class="form-control mt-4 w-75" placeholder="Enter your Email Address" />
            <input type="password" asp-for="Password" class="form-control mt-4 w-75" placeholder="Enter your Password" />
        </div>
        <div class=" row justify-content-center">
            <button class=" btn btn-outline-primary mt-5 w-25 "> Submit </button>
        </div>
        <p class="text-center mt-3">Don't have an account? <a href="~/User/Register">Sign up</a></p>
    </form>
</body>
</html>
