@{
    Layout = null;
}
@model LeaveManagementSystem.ViewModel.RegisterUserViewModel;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LeaveManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LeaveManagementSystem.styles.css" asp-append-version="true" />
</head>
<body class="row justify-content-center">
    <h1 class="text-center mt-5 font-weight-light text-primary">Register</h1>
    <form asp-action="MakeUser" method="post">
        <div class=" row justify-content-center">
            <input type="text" asp-for="FirstName" class="form-control mt-4 w-75 placeholder-glow" placeholder="Input Employee FirstName" />
            <input type="text" asp-for="LastName" class="form-control mt-4 w-75" placeholder="Input Employee LastName" />
            <input type="number" asp-for="Position" max="4" min="0" class="form-control mt-4 w-75" placeholder="Input Employee Position" />
            <input type="email" asp-for="Email" class="form-control mt-4 w-75" placeholder="Input Employee Email" />
            <input type="password" asp-for="Password" class="form-control mt-4 w-75" placeholder="Input Employee Password" />
        </div>
        <div class=" row justify-content-center">
            <button class=" btn btn-outline-primary mt-5 w-25 "> Submit </button>
        </div>
    </form>
</body>
</html>